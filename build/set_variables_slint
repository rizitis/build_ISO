#!/bin/sh
#cd .. || exit
ROOTDIR=$(pwd)
export ROOTDIR
#cd -
# version of the kernel to be include in the ISO
KVER=6.12.51
export KVER
# version of the ISO
ISOVERSION="15.0-11"
export ISOVERSION
SLINTVERSION="15.0"
export SLINTVERSION
SLACKVERSION="15.0"
export SLACKVERSION
# Remote Slackware repository
SLACKWAREREMOTE="slackware.uk/salix/x86_64/slackware-15.0"
export SLACKWAREREMOTE
# Remote Slint repository
SLINTREMOTE="slackware.uk/slint/x86_64/slint-15.0"
export SLINTREMOTE
SLAPTGETISO="$ROOTDIR/build/slapt-getrc.isoslint"
export SLAPTGETISO
ARCH="$(uname -m)"
export ARCH
ISOLABEL="slint$ISOVERSION"
export ISOLABEL
# Owner of the repository hosting $ROOTDIR
REGULARUSER="$(stat -c %U "$ROOTDIR")"
export REGULARUSER
DEST="$ROOTDIR"/initrd-tree
export DEST
ISODIR="$ROOTDIR"/isodir
export ISODIR
SCRIPTS="$ROOTDIR"/misc
export SCRIPTS
DATESTAMP="$(date -u +%Y%m%d)"
export DATESTAMP
PATHTOISO="$ROOTDIR"/slint64-"${ISOVERSION}".iso
export PATHTOISO
INSTALLERVERSION=15.0
export INSTALLERVERSION
SLINTDOCS="$ROOTDIR/slint-translations"
export SLINTDOCS
LANG=C
export LANG
SETS="bootstrapslint
aaa_base
installer
fullslint
wpa_supplicant-nogui
i3
lxqt
mate
libreoffice_l10n
aspell-words-lists
some_mbrola_voices
some_flite_voices"
export SETS
MINSETS=$SETS
export MINSETS
DISTRIBUTION=slint
export DISTRIBUTION
